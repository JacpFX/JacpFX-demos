<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:id="parent" alignment="BOTTOM_CENTER"
        >
    <children>
        <ScrollPane VBox.vgrow="ALWAYS" fitToHeight="true" fitToWidth="true">
            <content>
                <VBox fx:id="main" alignment="BOTTOM_CENTER" spacing="15.0">
                    <children>

                    </children>
                </VBox>
            </content>

        </ScrollPane>
        <ScrollPane fitToHeight="true" fitToWidth="true" minHeight="200">
            <content>
                <HBox alignment="CENTER" spacing="15.0">
                    <children>
                        <TextArea fx:id="chatTextArea" maxHeight="150"
                                  id="chatTextArea"/>
                        <Button fx:id="send" text="%send"/>
                    </children>
                </HBox>
            </content>

        </ScrollPane>
        <Pane/>
    </children>

</VBox>
